---
import "../../../lib/src/styles.css";
import Resets from '@julian_cataldo/astro-resets/Resets.astro'
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Honeymate</title>
    <Resets removeAllMargins fontSmoothing scrollSmooth borderBox scrollBarKeep unstyleNavList accessibleLineHeight />
  </head>

  <body>
    <slot />
    <script>
      import "../scripts/honeymate";
    </script>
  </body>
</html>

<style is:global>
  :root {
    --color-background: #1e1e1e;
    --color-foreground: rgb(255 248 231 / 87%);
    --color-honey: #facc56;
    --color-honey-disabled: #837a6487;
    --color-green: #2c8d6c;
    --font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
  }

  body,
  html {
    font-family: var(--font-family);
    background-color: var(--color-background);
    color: var(--color-foreground);
    color-scheme: only dark;
  }

  body {
    /* margin: 50px 100px; */
    overflow-x: hidden;
    --honey-spinner: var(--color-honey);
  }

  .square {
    aspect-ratio: 1 / 1;
    width: 100%;
    background-color: var(--color-green);
  }

  @media screen and (max-width: 800px) {
    body {
      margin: 50px 20px;
    }
  }
</style>
