{
    "name": "mishamyrt-honeymate",
    "version": "2.3.0",
    "description": "Dead simple loading animations",
    "main": "dist/honeymate-commonjs.js",
    "scripts": {
        "dev": "npx rollup -c & npx rollup -c --environment module:true",
        "build": "npx rollup -c --environment prod & npx rollup -c --environment module --environment prod",
        "server": "node test/index.js",
        "test": "npm run integration-tests && npm run check-codestyle",
        "check-codestyle": "npx eslint ./",
        "integration-tests": "npx mocha test/index.js --timeout 20000 --exit",
        "fix-codestyle": "npx eslint ./ --fix && npx js-beautify -r ./source/*"
    },
    "author": "Misha Myrt",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/mishamyrt/honeymate/issues"
    },
    "homepage": "https://misha.myrt.co/tools/honeymate/",
    "devDependencies": {
        "@babel/core": "^7.1.6",
        "@babel/preset-env": "^7.1.6",
        "browserslist": "^4.3.5",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "chromedriver": "^2.44.1",
        "eslint": "^5.9.0",
        "js-beautify": "^1.7.5",
        "mocha": "^5.2.0",
        "node-static": "^0.7.10",
        "rollup-plugin-babel": "^4.0.3",
        "rollup-plugin-terser": "^1.0.1",
        "selenium-webdriver": "^4.0.0-alpha.1",
        "static-server": "^2.2.1"
    }
}
