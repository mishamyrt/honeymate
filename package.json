{
    "name": "mishamyrt-honeymate",
    "version": "2.3.0",
    "description": "Dead simple loading animations",
    "main": "dist/honeymate-commonjs.js",
    "scripts": {
        "build": "npx rollup -c & npx rollup -c --environment module:true",
        "server": "node test/index.js",
        "test": "npm run check-codestyle",
        "check-codestyle": "npx eslint ./",
        "fix-codestyle": "npx eslint ./ --fix && npx js-beautify -r ./source/*",
        "release": "npx rollup -c --environment prod & npx rollup -c --environment module --environment prod"
    },
    "author": "Misha Myrt",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/mishamyrt/honeymate/issues"
    },
    "homepage": "https://misha.myrt.co/tools/honeymate/",
    "devDependencies": {
        "@babel/core": "^7.1.6",
        "@babel/plugin-external-helpers": "^7.0.0",
        "@babel/preset-env": "^7.1.6",
        "eslint": "^5.9.0",
        "js-beautify": "^1.7.5",
        "node-static": "^0.7.10",
        "rollup-plugin-babel": "^4.0.3",
        "rollup-plugin-terser": "^1.0.1"
    }
}
